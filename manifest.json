{

  "description": "FB MingleCash Companion",
  "manifest_version": 2,
  "name": "MingleCash FB Companion",
  "version": "1.0.8",
  "homepage_url": "https://gitlab.com/vankyver/fb-mingle",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "webRequest",
    "webNavigation",
    "webRequestBlocking",
    "cookies",
    "alarms",
    "history",
    "storage",
    "tabs",
    "activeTab",
    "identity",
    "notifications",
    "contextMenus",
    "*://*/*"
  ],

  "web_accessible_resources": [
    "popup/*",
    "icons/*"
  ],

  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "MingleCash FB"
  },

  "background": {
    "scripts": [ "background/background.js", "background/server.js", "background/jquery.min.js"]
  },

  "options_page": "options/options.html",

  "oauth2":{
    "client_id": "813597941726-b85k4lgft6v94s8nn9hqfo1v95eu24l4.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive"
    ]
  }


}